@{   
    ViewBag.Title = "Workbench";
}

<h2>Workbench</h2>
<h3>Add Event</h3>
@using (Html.BeginForm("Index", "Workbench", FormMethod.Post,new {enctype = "multipart/form-data"}))
{
    
    @Html.TextBox("name");
    @Html.DropDownList("type", new[]
    {
       new SelectListItem {Text = "Tick", Value ="tick"},
       new SelectListItem {Text = "Start", Value ="start"},
       new SelectListItem {Text = "Stop", Value ="stop"}
    });    
   <input type="submit" name="add" value="Add Event" />
   <br/>
   <h3>Import Events</h3>
   <input type="file" name="file" />
    <input type="submit" name="import" value="Import Events" />
}
<h3>Events</h3>
<table id="events">
    <thead>
        <tr>
            <th>Feature</th>
            <th>Type</th>
            <th>At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userEvent in ViewBag.Events)
        {
            <tr>
                <td>@userEvent.Feature</td>
                <td>@userEvent.Type</td>
                <td>@userEvent.At</td>
            </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script type="text/javascript">
        $("ul.nav li.workbench").addClass("active");
        $("table#events").dataTable();
    </script>    
}
